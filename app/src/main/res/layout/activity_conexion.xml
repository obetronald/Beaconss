<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#051829"
    tools:context=".Conexion">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="choose your place of visit"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageView

        android:id="@+id/imageTitulo"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/m" />

    <ImageView

        android:id="@+id/imageTitul"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/r" />

    <ImageView

        android:id="@+id/imageTitu"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/h" />

</LinearLayout>